{{ template "header" . }}

<section class="ph5-ns pv4 ph3" style="max-width: 66rem;">
		<div >
  <div class="overflow-auto">
    <table class="f6 w-100 mw8 center" cellspacing="0">
      <thead>
        <tr class="stripe-dark">
          <th class="fw6 tl pa2 bg-white">Date</th>
          <th class="fw6 tl pa2 bg-white">Topic</th>
          <th class="fw6 tl pa2 bg-white">ID</th>
          <th class="fw6 tl pa2 bg-white">User</th>
          <th class="fw6 tl pa2 bg-white">Published</th>
        </tr>
      </thead>
      <tbody class="lh-copy">
{{ range .Stories }}
<tr class="stripe-dark">
          <td class="pa2">{{ .Date }}</td>
          <td class="pa2">{{ .Topic }}</td>
          <td class="pa2"><a href="/write?story={{ .ID }}">{{ .ID }}</a></td>
          <td class="pa2">{{ .UserID }}</td>
          <td class="pa2">{{ .Published }}</td>
</tr>  
{{ end }}        
      </tbody>
    </table>
  </div>
</div>
	</section>
	
{{ template "footer" . }}