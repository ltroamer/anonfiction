{{ template "messages" . }}


<section class="pv2 ph3 ph5-ns mb5 mt2">
  <article class="">
    <h1 class="db f4 mb1">Your profile</h1>
    <span class="f5 db lh-copy measure-wide">
   Your profile is private. Only you can see the list of stories that you have published. Only you can edit and delete them. Anyone can read them.
 </span>

    <h1 class="db f4 mb1">Your stories</h1>
    <span class="f5 db lh-copy measure-wide">
   The stories you have authored are listed below.  If you need to update your story, just click Edit. Once published, you will no longer be able to Edit. If you wish to no longer have your story available, feel free to delete.
 </span>
  </article>
  <article class="pv4">
    <ul class="list pl0 mt0 measure">
      {{range .Stories }}
      <li class="flex items-center lh-copy pa3 ph0-l bb b--black-10">
        <div class="flex-auto">
          <span class="f6 db gray-70">{{ .Topic }} (<code>{{ .ID }}</code>)</span>
          <span class="f6 db black-70">{{ .Date.Format "January 2, 2006" }}</span>
        </div>
        <div>
          <a class="f6 link dim br1 ba bw1 ph3 pv2 mb2 dib blue" href="/read/story/{{ .ID }}">Read</a>
          <a class="f6 link dim br1 ba bw1 ph3 pv2 mb2 dib black" href="/write/{{ .ID }}">Edit</a>
          <a class="f6 link dim br1 ba bw1 ph3 pv2 mb2 dib red" href="/delete?story={{ .ID }}">Delete</a>
        </div>
      </li>
      {{end}}
      <div class="pv4 ph2">
        <a class="f6 link dim br1 ba bw1 ph5 pv2 mb2 dib blue" href="#0">Download all</a>
        <a class="f6 link dim br1 ba bw1 ph5 pv2 mb2 dib gray" href="#0">Delete profile</a>
  </article>

